<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.hatari"
		name="Atari ST (hatari)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.hatari.so"
                   library_linux="game.libretro.hatari.so"
                   library_osx="game.libretro.hatari.dylib"
                   library_windx="game.libretro.hatari.dll"
                   library_wingl="game.libretro.hatari.dll">
		<platforms>Atari ST</platforms>
		<extensions>st</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Hatari v1.0.1</summary>
		<description>Source: https://github.com/libretro/hatari</description>
		<platform>all</platform>
	</extension>
</addon>
